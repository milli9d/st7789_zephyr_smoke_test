&usb_serial {
	status = "okay";
};

/* 16MB flash */
&flash0 {
	reg = <0x0 DT_SIZE_M(16)>;
};

/* 8MB psram */
&psram0 {
	size = <DT_SIZE_M(8)>;
};

&pinctrl {
	spim2tft_default: spim2tft_default {
		group1 {
			pinmux = <SPIM2_MISO_GPIO9>,
			<SPIM2_SCLK_GPIO6>,
			<SPIM2_CSEL_GPIO5>;
		};
		group2 {
			pinmux = <SPIM2_MOSI_GPIO7>;
			output-low;
		};
	};
};

&spi2 {
	pinctrl-0 = <&spim2tft_default>;
};


